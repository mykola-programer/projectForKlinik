<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">
    <persistence-unit name="Hibernate_JPA">
        <description>
            Persistence unit for Hibernate.
        </description>

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <mapping-file>/META-INF/operation_bean.orm.xml</mapping-file>

        <class>ua.nike.project.hibernate.entity.Hospitalization</class>
        <class>ua.nike.project.hibernate.entity.Operation</class>
        <class>ua.nike.project.hibernate.entity.OperationDate</class>
        <class>ua.nike.project.hibernate.entity.OperationDay</class>
        <class>ua.nike.project.hibernate.entity.Patient</class>
        <class>ua.nike.project.hibernate.entity.Procedure</class>

        <properties>
            <property name="javax.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>

            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/projectForClinic"/>

            <property name="javax.persistence.jdbc.user"
                      value="postgres"/>

            <property name="javax.persistence.jdbc.password"
                      value="123"/>


            <property name="hibernate.show_sql"
                      value="true"/>

            <property name="hibernate.format_sql"
                      value="true"/>

            <property name="hibernate.hbm2ddl.auto"
                      value="update"/>

            <property name="packagesToScan"
                      value="ua.nike.project.hibernate.entity"/>

            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQL95Dialect"/>

            <property name="hibernate.connection.pool_size" value="50"/>

            <!--<property name="hibernate.cache.use_query_cache" value="true"/>-->


        </properties>

    </persistence-unit>
</persistence>